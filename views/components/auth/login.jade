block body
  div(ng-controller="AuthCtrl")
    .row
      .small-4.small-centered.columns
        h2 Log In
        if errors
          each error in errors
            label=error

        form(role="form", ng-submit="logIn()")
          input(type="text", name="identifier",placeholder="Username or Email", ng-model="username")
          input(type="password" name="password" placeholder="Password", ng-model="password")
          button(type="submit") Sign In

        if providers
          h4 You can also use one of these...
          each key in providers
            .row
              .small-3.columns
                a(href="#", role="button")=key.name
